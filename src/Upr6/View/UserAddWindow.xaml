<Window x:Class="Upr6.View.UserAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Upr6.View"
        mc:Ignorable="d"
        Title="UserAddWindow" Height="250" Width="300">
    <Grid>
        <StackPanel Margin="30">
            <TextBlock>Name</TextBlock>
            <TextBox Text="{Binding Username}"></TextBox>
            <TextBlock>Password</TextBlock>
            <TextBox Text="{Binding Password}"></TextBox>
            <Button Command="{Binding UserAddCommand}" CommandParameter="{Binding .}">Add</Button>
            <Button Click="Button_Click">Reverse VM</Button>
        </StackPanel>
    </Grid>
</Window>
