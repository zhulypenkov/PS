<Window x:Class="Upr5.Windows.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Upr5.Windows"
        mc:Ignorable="d"
        Title="AddUserWindow" Height="250" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock>Име</TextBlock>
            <TextBox x:Name="tbU"></TextBox>
            <TextBlock>Парола</TextBlock>
            <TextBox x:Name="tbP"></TextBox>
            <Button Content="Добави" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
